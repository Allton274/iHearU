<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:allowDividerBelow="true"
        app:title="General Information">

        <EditTextPreference
            app:key="name"
            app:title="Name:"
            app:useSimpleSummaryProvider="true"


            />

        <EditTextPreference
            app:key="dangerPhrase"
            app:title="Danger Phrase:"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="emergencyMsg"
            app:title="Emergency Message Content:"
            app:useSimpleSummaryProvider="true"
            />
    </PreferenceCategory>

</PreferenceScreen>